<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp12.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp12.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="IntroScreen"
        ContentTemplate="{DataTemplate local:IntroScreenView}"
        Route="IntroScreen" />
    <ShellContent
        Title="DashboardView"
        ContentTemplate="{DataTemplate local:DashboardView}"
        Route="DashboardView" />
    <ShellContent
        Title="DetailView"
        ContentTemplate="{DataTemplate local:DetailView}"
        Route="DetailView" />

</Shell>
